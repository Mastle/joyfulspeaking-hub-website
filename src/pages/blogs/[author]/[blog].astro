---
import favicon from "../../../assets/js_favicon.svg";
import "../../../assets/styles/main.css";
import BlogLayout from "../../../components/BlogLayout.astro";
import Navbar from "../../../components/Navbar.astro";
import Footer from "../../../components/Footer.astro";
export function getStaticPaths() {
    return [
        { params: { author: "amirali", blog: "how-to-learn-english" } },
        { params: { author: "amirali", blog: "the-first-step" } },
    ];
}

const { blog, author } = Astro.params;
---

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={favicon} />
    <title>Joyful Speaking Hub</title>
</head>
<main>
    <Navbar />
    <BlogLayout blogPostTitle={blog} blogAuthor={author} />
    <Footer />
</main>
